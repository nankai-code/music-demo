// 背景图片
bg-image($url)
  background-image: url("../../common/images/" + $url)
  // background-image: url($url + "@2x.png")
  // 下面是根据尺寸不同自动设置不同的背景图片
  // @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
  //   background-image: url($url + "@3x.png")

// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px